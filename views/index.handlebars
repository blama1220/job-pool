<style>

  .jumbotron {
        margin: 15px;
        padding: 40px;
    }

    #jobtitle {
        padding: 15px;
    }

    .display-4,
    #jobtitle, #jumbotitle, .lead {
        text-align: center;
    }

    .job {
        margin: 20px;
    }

   .searchbar, .dropdwn {
       margin: 25px;
   }

</style>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarTogglerDemo03"
    aria-controls="navbarTogglerDemo03"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="/">
    Job Pool
  </a>
  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item active">
        <a class="nav-link" href="#">
          Log In
        </a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="#">
          Sign In
        </a>
      </li>
      {{! <li class="nav-item">
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
      </li> }}
    </ul>
  </div>
</nav>
<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">
      Welcome to Job Pool!
    </h1>
    <p class="lead">
      This is a simple app that help employers and future workers get jobs an easy and convenient way.
    </p>
    <hr class="my-4"/>
    <h2 id="jumbotitle">Search for jobs right now!</h2>
    <div class="row justify-content-around mx-auto searchbar">
      <form class="form-inline my-2 my-lg-0">
        <input
          class="form-control mr-sm-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
          Search
        </button>
      </form>
    </div>
    <div class="row justify-content-around mx-auto dropdwn">
      <div class="dropdown">
        <button
          class="btn btn-secondary dropdown-toggle"
          type="button"
          id="dropdownMenuButton"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Categories
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">
            Health
          </a>
          <a class="dropdown-item" href="#">
            Technology
          </a>
          <a class="dropdown-item" href="#">
            Engenieering
          </a>
          <a class="dropdown-item" href="#">
            Education
          </a>
          <a class="dropdown-item" href="#">
            Marketing
          </a>
          <a class="dropdown-item" href="#">
            Law
          </a>
          <a class="dropdown-item" href="#">
            Design
          </a>
        </div>
      </div>
    </div>

  </div> 
  {{!-- end of jumbotron --}}
  <h1 id="jobtitle">
    Jobs
  </h1>
  <div class="jobs">
    {{#each jobs}}
    <div class="job">
      <div class="card text-center">
        <div class="card-body">
          <h2 class="card-title">
            {{this.position}}
          </h2>
          <h5 class="card-title">
            {{this.company}}
          </h5>
          <p class="card-text">
            {{this.description}}
          </p>
          <a href="#" class="btn btn-primary">
            See More
          </a>
        </div>
        <div class="card-footer text-muted">
          <div class="row">
            <div class="mx-auto">Categorie: {{this.category}}</div>
          </div>
          <div class="row">
            <div class="mx-auto">Data Created: {{this.created_at}}</div>
          </div>
        </div>

      </div>
    </div>
    {{/each}}
  </div>
</div>